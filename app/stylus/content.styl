		}

		.news-block-content {
			&:before {
				left auto
				top auto
				right 0
				bottom 0
				border-radius 0 0 10px 0
				border 1px solid #eaeaea
				border-top: 0
				border-left: 0
			}

			&:hover:before {
				border-color $blue
			}
		}

	}
