			border-radius 10px 0 0 0
			border-bottom: none
			border-right: none
			position: absolute
			transition all 0.3s

		}

		&:hover {

			&:before {
				border-color $blue
			}

			h4 {
				color $blue
			}

		}

		.inner {
			max-width: 340px
			margin: 0 auto
			overflow: hidden
			position: relative
			z-index: 2
			+below($screen-sm) {
				width: 200px
			}
		}

		h4 {
			text-transform: uppercase
			margin-top: 5px
			transition all 0.3s
		}

		p {
			line-height: 1.3
			text-align: left
		}

		.btn {
			margin-top: 8px
		}
	}

