input[type='number']::-webkit-inner-spin-button,
input[type='number']::-webkit-outer-spin-button {
	display: none;
}

input[type="number"] {
	margin: auto;
	width: 40px;
	height: 33px;
	display: block;
	font-size: 14px;
	text-transform: uppercase;
	text-align: center !important;
	color: #3f3f3f;
	background: none;
	outline: none;
	pointer-events: none;
}

span.spinner {
	position: relative;
	display: block;
	width: 78px;
	height: 35px;
	text-align: center;
	overflow: hidden;
	margin: auto;
	border: 1px solid #c6c6c6;
	border-radius: 30px;
	user-select: none;
	-ms-user-select: none;
	-moz-user-select: none;
	-webkit-user-select: none;
	-webkit-touch-callout: none;
}

span.spinner > .sub,
span.spinner > .add {
	display: block;
	width: 17px;
	height: 33px;
	position: absolute;
	top: 0;
	cursor: pointer;
	background-repeat: no-repeat;
	-webkit-transition: background-image .3s;
	transition: background-image .3s;
}

span.spinner > .sub {
	left: 0;
	background-image: url('../images/number_left.png');
	background-position: 7px 50%;
	border-radius: 30px 0 0 30px;
}

span.spinner > .sub:hover {
	background-image: url('../images/number_left_h.png');
}

span.spinner > .add {
	right: 0;
