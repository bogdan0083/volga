.catalog-line {
	margin-bottom: 30px
	clearfix()

	&-bottom {
		margin-top: 20px
		.items-amount {
			margin-top: 10px
		}
	}
	+below($screen-sm) {
		text-align: center
	}
}

.select {
	width: 200px
	display: inline-block
	vertical-align: middle
}

.items-amount {
