#wrapper {
	overflow: hidden;
}

.middle {
	max-width: 1170px;
	margin: auto;
	position: relative;

	+below($screen-md) {
		max-width: 880px;
	}

	+below($screen-sm) {
		max-width: 480px
		padding 0 10px
	}
}

.middle:after {
	content: '';
	display: table;
	width: 100%;
	clear: both;
}

header {
	position: relative;
	height: 145px;
	display: block;
	background: #fff;
	box-shadow: 0 0 20px 1px rgba(0, 0, 0, .15);
	+below($screen-sm) {
		text-align: center
		height auto
		padding-bottom: 10px
	}
}

.header_top {
	height: 29px;
	border-bottom: 1px solid #e5e5e5;
	background: url('../images/bg.png') 50% 0;
	+below($screen-md) {
		nav li {
			margin-right: 25px
		}
	}
	nav {
		+below($screen-sm) {
			display: none
		}
	}
}

#pull {
	display: none;
}

nav {
	padding-top: 5px;
}

nav li {
	float: left;
	margin-right: 32px;
	font-size: 14px;
}

nav li a {
	text-decoration: none;
	color: #3f3f3f;
	-webkit-transition: color .3s;
	transition: color .3s;
}

nav li a:hover,
nav li span {
	color: #2161ed;
}

.site_enter {
	padding-left: 23px;
	height: 16px;
	position: absolute;
	right: -7px;
	top: 5px;
	font-size: 14px;
	color: #2161ed;
	line-height: 16px;
	box-sizing border-box
	+below($screen-md) {
		right -7px
	}
	+below($screen-sm) {
		right 15px
	}
}

.site_enter a {
	padding: 0 3px;
	color: #2161ed;
	text-decoration: none;
	-webkit-transition: color .3s;
	transition: color .3s;
}

.site_enter a:hover {
	color: #ed4721;
}

.site_enter div {
	width: 16px;
	height: 16px;
	position: absolute;
	left: 0;
	top: 0;
	background: url('../images/site_enter_icon.png') no-repeat;
	-webkit-transition: background-image .3s;
	transition: background-image .3s;
}

.site_enter a:hover ~ div {
	background-image: url('../images/site_enter_icon_h.png');
}

.searchbar_open {
	width: 35px;
	height: 29px;
	cursor: pointer;
	position: absolute;
	right: 0;
	top: 0;
	background: url('../images/search.png') no-repeat 50%;
	display: none;
}

.searchbar {
	width: 368px;
	height: 35px;
	border: 1px solid #c6c6c6;
	background: #f6f6f6;
	position: absolute;
	right: 0;
	top: 70px;
	border-radius: 40px;
	overflow: hidden;
	+below($screen-md) {
		width: 200px
		&::placeholder {
			text-overflow ellipsis
		}
	}

	+below($screen-sm) {
		position: relative
		margin: 10px auto 0
		top auto
		right auto
	}
}

.searchbar input[type="text"] {
	padding-left: 13px;
	width: 85%;
	height: 33px;
	position: absolute;
	left: 0;
	top: 0;
	background: none;
	color: #3f3f3f;
	font-size: 14px;
	outline: none;
}

.searchbar input[type="text"]::-webkit-input-placeholder {
	color: #3f3f3f;
}

.searchbar input[type="submit"] {
	width: 33px;
	height: 33px;
	position: absolute;
	right: 0;
	top: 0;
	outline: none;
	cursor: pointer;
	background: url('../images/search.png') no-repeat 5px 50%;
}

#logo {
	position: absolute;
	top: 9px;
	left: 2px;
	display: block;
	background: url('../images/logo.png') no-repeat;
	width: 200px;
	height: 45px;
	padding: 0 0 0 89px;
	box-sizing: content-box
	font-family: 'Myriad Pro', sans-serif;
	font-size: 30px;
	color: #2161ed;
	text-decoration: none;
	font-weight: 600
	+below($screen-sm) {
		display: block
		margin: 10px auto
		position: relative
		top 0
		left 0
		padding-left: 69px
	}
}

#logo span {
	font-family: 'Myriad Pro', sans-serif;
	color #ed4721;
	font-size: 15px;
	position: relative;
	top: -20px;
}

header .desc {
	width: 425px;
	position: absolute;
	left: 337px;
	top: 18px;
	line-height: 1.4;
	font-size: 14px;
	color: #3f3f3f;
	+below($screen-md) {
		display: none
	}
}

.basket {
	display: block;
	width: 135px;
	height: 35px;
	position: absolute;
	right: 229px;
	top: 18px
	text-decoration: none
	> a {
		text-decoration: none
		display: block
		padding-left: 56px;
		position: relative
		box-sizing border-box
		+below($screen-sm) {
			padding-left: 30px
		}
	}

	+below($screen-md) {
		right 150px
	}

	+below($screen-sm) {
		position: relative
		right 0
		top 0
		vertical-align: middle
		display: inline-block
		margin 5px 0
		padding-left: 0
	}
}

.basket > a {
	color: #ed4721;
	text-transform: uppercase;
	font-size: 12px;
	font-family: 'Myriad Pro', sans-serif;
	line-height: 35px;
}

.basket > a > span {
	display: block;
	width: 33px;
	height: 33px;
	position: absolute;
	left: 0;
	top: 0;
	border: 1px solid #ed4721;
	border-radius: 50px;
	background: url('../images/icon_basket_r.png') no-repeat 50% #fff;
	-webkit-transition: background .3s;
	transition: background .3s;
}

.basket:hover > a > span {
	background: url('../images/icon_basket.png') no-repeat 50% #ed4721;
}

.basket:hover:before {
	content ''
	position: absolute
	height: 10px
	left 0
	bottom -10px
	width: 100%
}

.basket:hover .basket-table-body {
	display: block
	z-index: 100
}

.basket-table-body {
	background-color: $red
	width: 370px
	border-radius 7px
	padding: 1px
	line-height: 1
	position: absolute
	left 0
	top 42px
	display: none
	+below($screen-sm) {
		display: none !important
	}
}

.basket-table-wrap {
	border-radius 7px
	background-color: white
	text-align: center
	overflow: auto
	padding-top: 5px
	padding-bottom: 5px

	table {
		width: 95%
	}

	tr {
		height: 50px
		border-bottom: 1px solid #e5e5e5
		&:last-child {
			border none
		}
	}

	a {
		font-size: 11px
		text-decoration: none
		color $text-color
	}

	.item-link {
		text-align: left
		display: block
		transition all 0.3s
		&:hover {
			color $red
		}
	}

	td {
		float: none
		padding: 3px 0
		&:nth-child(1) {
			width: 25px
		}

		&:nth-child(2) {
			width: 50px
		}
		&:nth-child(3) {
			width: 125px
		}

		&:nth-child(4) {
			width: 1px
		}

		&:last-child {
			width: 10%
		}
	}

	.spinner {
		border none
		input {
			color #919191
		}
	}

	.scrollbar-inner {
		max-height: 150px
	}
}

.ruble {
	font-style: normal
	display: inline-block
	margin-left: 4px
	font-size: 0.9em
}

.price {
	display: inline-block
}

.basket-table-bottom {
	height: 35px
	line-height: 35px
	color white
	padding 0 15px
	font-size: 12px

	.basket-table-overall {
		display: inline-block
	}
	a {
		color white
		text-decoration: none
	}

	.price {
		margin-left: 8px
	}

	.to-order-link {
		float: right
		display: block
		text-transform: uppercase
		padding-right: 24px
		background: url("../images/arr-right-white.png") no-repeat right center
		&:hover {
			text-decoration: underline
		}
	}
}

.cross-gray {
	width: 9px
	height: 10px
	display: inline-block
	background: url(../images/cross-gray.png) no-repeat
}

.phone {
	height: 17px;
	padding-left: 24px;
	position: absolute;
	top: 27px;
	right: 0;
	background: url('../images/icon_phone.png') no-repeat;
	line-height: 17px;
	font-size: 16px;
	color: #3f3f3f;

	+below($screen-sm) {
		position: relative
		display: inline-block
		top auto
		right auto
	}

}

#catalog_button {
	display: block;
	width: 298px;
	height: 33px;
	border: 1px solid #3e76ef;
	text-decoration: none;
	background: url('../images/icon_catalog.png') no-repeat 16px 50% #fff;
	border-radius: 30px;
	position: absolute;
	top: 73px;
	left: 0;
	cursor: pointer;
	z-index: 152;
	-webkit-transition: background-color .3s, background-image .3s;
	transition: background-color .3s, background-image .3s;
	+below($screen-sm) {
		position: relative
		top auto
		margin 10px auto
	}
}

#catalog_button > span {
	position: absolute;
	left: 27%;
	top: 0;
	font-size: 12px;
	color: #3e76ef;
	line-height: 33px;
	text-transform: uppercase;
	-webkit-transition: color .3s;
	transition: color .3s;
}

#catalog_button:after {
	content: '';
	display: block;
	width: 15px;
	height: 15px;
	position: absolute;
	margin: auto;
	right: 14px;
	bottom: 0;
	top: 0;
	background: url('../images/icon_catalog_arrow.png') no-repeat 50%;
	-webkit-transition: background-image .3s, transform .3s;
	transition: background-image .3s, transform .3s;
}

#catalog_button:hover,
#catalog_button.catalog_opened {
	background-color: #3e76ef;
	background-image: url('../images/icon_catalog_h.png');
}

#catalog_button:hover > span,
#catalog_button.catalog_opened > span {
	color: #fff;
}

#catalog_button:hover:after,
#catalog_button.catalog_opened:after {
	background-image: url('../images/icon_catalog_arrow_h.png');
}

#catalog_button:hover:after,
#catalog_button.catalog_opened:after {
	transform: rotate(90deg);
	-webkit-transform: rotate(90deg);
}

#catalog_button #catalog_menu {
	position: absolute;
	z-index: 5;
	left: -1px;
	top: 34px;
	border-radius: 0 0 5px 5px;
	border-top: 0;
	height: 0;
	overflow: hidden;
	padding-top: 10px;
}

#catalog_button #catalog_menu:before,
#catalog_button #catalog_menu:after {
	content: '';
	display: block;
	width: 1px;
	height: 13px;
	position: absolute;
	top: -13px;
	background: #e5e5e5;
}

#catalog_button #catalog_menu:before {
	left: -1px;
}

#catalog_button #catalog_menu:after {
	right: -1px;
}

.product_nav {
	position: absolute;
	top: 80px;
	left: 336px;
	+below($screen-md) {
		left 316px
	}

	+below($screen-sm) {
		display: none
	}
}

.product_nav li {
	float: left;
	margin-right: 45px;
	+below($screen-md) {
		margin-right: 15px
	}
}

.product_nav li > * {
	font-size: 12px;
	text-transform: uppercase;
	text-decoration: none;
}

.product_nav li a {
	text-decoration: none;
	color: #3f3f3f;
	position: relative;
	-webkit-transition: color .3s;
	transition: color .3s;
}

.product_nav li a:after,
#catalog_menu li a:after {
	content: '';
	display: block;
	width: 0;
	height: 1px;
	background: #ed4721;
	position: absolute;
	left: 0;
	bottom: -5px;
	-webkit-transition: width .3s;
	transition: width .3s;
}

.product_nav li a:hover,
.product_nav li span {
	color: #ed4721;
}

.product_nav li a:hover:after {
	width: 100%;
}

h2 span {
	position: relative;
}

h2 span:before {
	content: '';
	display: block;
	width: 10px;
	height: 10px;
	position: absolute;
	margin: auto;
	bottom: 0;
	top: 0;
	left: 0;
	border-radius: 10px;
	background: #ed4721;
}

.products_list {
	width: 1170px;
}

.products_list li {
	float: left;
	margin: 0 30px 30px 0;
}

.products_list li:nth-child(4n) {
	margin-right: 0;
}

.special-offers-slider {
	.items-row {
		margin: 0
	}
}

.items-row {
	margin-left: -18px
	margin-right: -18px
	+below($screen-sm) {
		text-align: center
	}
}

.product_block {
	width: 270px;
	border-radius: 6px;
	overflow: hidden;
	position: relative;
	background: #fff;
	border 1px solid #c6c6c6
	-webkit-transition: border-color .3s, box-shadow .3s;
	transition: border-color .3s, box-shadow .3s;
	padding 3px
	display: inline-block
	text-align: left
	margin 10px 13px
	&:hover {
		.wrapper {
			border-color transparent
			&:before {
				transform none
			}
		}
	}

	.inner {
		padding 16px 20px 20px
	}

	.product_link {
		text-decoration: none
		color $text-color
		font-size: 14px
	}

	.product_name {
		height: 50px
		line-height: 1.15
	}

	.product_image {
		text-align: center
	}

	.wrapper {
		font-size: 12px
		padding-bottom: 5px
		border-bottom: 1px solid #e5e5e5
		position: relative
		transition all 0.3s
		overflow: hidden
		&:before {
			content ''
			position: absolute
			height: 1px
			width: 100%
			background-color: $red
			bottom 0
			left 0
			transition all 0.3s
			transform translateX(-100%)
		}
		> div, a {
			max-width: 48%
			text-overflow ellipsis
			display: inline-block
			overflow: hidden
		}
	}

	.product-brand {
		color $text-color
	}

	.product-brand, .product-pack {
		float: right
	}

	.product-store {
		display: inline-block

	}

	.wrapper-additional {
		font-size: 12px
		padding-top: 8px
	}

	.product-cash {
		float: right
	}

	.product-bottomline {
		clearfix()
		margin-top: 15px
	}

	.product_add_to_basket,
	.product_where_buy,
	.edit_in_basket {
		width: 35px
		height: 35px
		border-radius 50%
		border 1px solid $red
		display: inline-block
		float: right
		transition all 0.3s
		background $red url("../images/icon_basket.png") no-repeat center
		margin-left: 15px
		&:hover {
			background-color: transparent
			background-image: url(../images/icon_basket_r.png)
		}
	}
	
	.edit_in_basket {
		background-color: $blue
		background-image: url(../images/icon_edit.png)
		border-color $blue
		&:hover {
			background-color: white
			background-image: url(../images/icon_edit_h.png)
		}
	}

	.product_where_buy {
		height: auto
		padding-right: 4px
		width: 130px
		border-radius 30px
		padding-left: 30px
		text-align: center
		border 1px solid $red
		background white url("../images/icon_where-buy.png") no-repeat 10px 7px
		&:hover {
			background-color: $red
			background-image url("../images/icon_where_buy_h.png")
			color white
		}
	}

	.product_price {
		float: left
		display: table
		vertical-align: middle
		min-height: 35px
		margin-top: -2px
		.wrap {
			display: table-cell
			vertical-align: middle
		}

		&_discount {
			margin-top: -6px
		}
	}

	.current_price {
		font-size 20px
	}

	.spinner {
		float: right
		height: 35px
		background-color: #f6f6f6
	}

	.labeled:before {
		border-width 35px
	}

	.labeled:after {
		font-size: 15px
		right 10px
		top: 8px
	}

	.labeled-hit:after,
	.labeled-new:after {
		font-size: 13px
	}
}

.crossed-price {
	color #919191
	text-decoration: line-through
	.ruble {
		text-decoration: none
	}
}

.product_block:hover {
	box-shadow: 0 0 5px 1px rgba(0, 0, 0, .2);
	border-color $red
}

.colored-red {
	color $red
}

.colored-blue {
	color $blue
}

.colored-gray {
	color #919191
}

.income-date {
	display: inline-block
	vertical-align: middle
	margin 0 3px
	padding-left: 1px
	input {
		display: none
		&:checked + span {
			background-color: $red
			color white
		}
	}

	span {
		cursor pointer
	}
}

.income-date-slider {
	display: inline-block
	vertical-align: middle
	width: 738px

	.income-date {
		display: inline-block !important
	}

	margin: 0 5px

	+below($screen-md) {
		width: 367px
	}

	+below($screen-sm) {
		width: 180px
		padding-bottom: 2px
	}
}

.income-items {
	background-color: white
	padding 30px 0 40px
	overflow: hidden
	+below($screen-sm) {
		padding 20px 0
		.items-row {
			text-align: center
		}
	}

	.section-title-container {
		background: white
	}
}

.item-secondary {
	width: 210px
	display: inline-block
	height: 210px
	margin 10px 14px
	text-align: center
	border-radius 10px
	border 1px solid #c7c7c7
	overflow: hidden
	position: relative
	text-decoration: none
	&:hover {
		.item-secondary-bottom {
			background-color: $red
		}
	}
	&-bottom {
		text-align: left
		position: absolute
		color white
		background-color: $blue
		transition all 0.3s
		width: 100%
		height: 50px
		bottom 0
		display: table
		.inner {
			display: table-cell
			vertical-align: middle
			text-transform: uppercase
			padding 5px 15px
		}
	}
}

.layout {
	padding-top: 13px
	padding-bottom: 30px
}

.breadcrumbs {
	font-size 12px
	position: relative
	z-index: 4
	margin-bottom: 18px
	+below($screen-sm) {
		display: none
	}
	a, span {
		text-decoration: none
		color #8f8f8f
		padding-left: 7px
		margin-right: 9px
		position: relative
		transition all 0.3s
		display: inline-block
		margin-top 3px
		padding-bottom: 3px
		&:before {
			content ''
			position: absolute
			width: 3px
			height: 3px
			background-color: #8f8f8f
			border-radius 50%
			left 0
			top 50%
			margin-top: -1px
			transition all 0.3s
		}
	}

	a:hover, span {
		color #3f3f3f
		&:before {
			background-color: $red
		}
	}
}

