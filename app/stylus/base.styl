body
    font-size 14px
    font-family 'Myriad Pro', sans-serif
    font-weight 400
    min-width: 100%;
    margin:0 0 122px;
    color $text-color
    background: url('../images/bg.png') 50% 0;

        
a
    text-decoration underline
    color inherit
    transition all 0.3s
    &:hover
        color black
        text-decoration none


.page-wrapper.pad-top {
    padding-top: 145px
    +below($screen-sm) {
        padding-top: 0
    }
}

.icon
    display inline-block
    vertical-align middle
    position relative
    background-color: transparent
    padding: 0
    border none
    &:before
        content ''
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        display block
        opacity: 0
        transition all 0.3s
    &:after
        content ''
        top 0
        left 0
        position: absolute
        opacity: 1
        transition all 0.3s
    + span
        display inline-block
        vertical-align middle

img
    max-width 100%

.nav-trigger
    margin: 0 auto
    text-align center
    margin-top 12px
    z-index 10
    position: absolute !important
    left 15px
    top 0
    display: none
    &.active
        hamburger-animation()
        &:before, &:after
            background-color: $blue
    +below($screen-sm)
        hamburger-generator(18px, 2px, 4px, $text-color)
        margin-top 12px

.page-wrapper
    transition transform 0.3s
    &.active
        transform translateX(200px)
        
.container
    padding 0 10px
    +above($screen-sm)
        padding: 0 15px

